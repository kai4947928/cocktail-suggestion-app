<div class="card">
  <%= link_to cocktail_path(cocktail), class: "card-link" do %>
    <div class="card-body">
      <h5 class="card-title"><%= cocktail.name %></h5>
      <p class="card-text">アルコール度数: <%= cocktail.alcohol_strength %>%</p>
      <p class="card-text">ベース: <%= cocktail.base_alcohol&.name || "不明" %></p>
    </div>
  <% end %>
</div>