<div class="col-md-4">
  <%= link_to recipe_path(recipe), class: "card" do %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= recipe.name %></h5>
        <p class="card-text">
          <strong>難易度:</strong> <%= recipe.difficulty.name if recipe.difficulty %><br>
          <strong>ベース:</strong> <%= recipe.base_liquor.name if recipe.base_liquor %><br>
          <strong>副材料:</strong>
          <% recipe.ingredients.each do |ingredient| %>
            <%= ingredient.name %><%= ", " unless ingredient == recipe.ingredients.last %>
          <% end %>
        </p>
      </div>
    </div>
  <% end %>
</div>